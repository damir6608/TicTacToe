<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/relMain"

    tools:context=".AITicTacToe">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/mainAnim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        app:lottie_autoPlay="true"
        android:scaleY="1.5"
        android:scaleX="1"
        app:lottie_rawRes="@raw/animatiom_background" />
<com.airbnb.lottie.LottieAnimationView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="-120dp"
    android:layout_marginLeft="30dp"
    android:scaleY="0.5"
    android:scaleX="0.5"
    app:lottie_loop="true"
    app:lottie_autoPlay="true"
    android:visibility="gone"
    android:id="@+id/funnybrain"
    app:lottie_rawRes="@raw/funnybrain"
    />
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:scaleY="1.5"
        android:scaleX="1.5"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:visibility="gone"
        android:id="@+id/handshake"
        app:lottie_rawRes="@raw/handshake"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        android:layout_marginLeft="25dp"
        android:scaleY="0.7"
        android:scaleX="0.7"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:visibility="gone"
        android:id="@+id/winner"
        app:lottie_rawRes="@raw/winner"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-130dp"
        android:layout_marginLeft="25dp"
        android:scaleY="0.7"
        android:scaleX="0.7"
        app:lottie_loop="true"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        android:id="@+id/try_again"
        app:lottie_rawRes="@raw/try_again"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-400dp"
        android:layout_marginLeft="20dp"
        android:scaleY="0.7"
        android:scaleX="0.7"
        android:visibility="gone"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:id="@+id/hourglass"
        app:lottie_rawRes="@raw/hourglass"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Игрок 1"
        android:fontFamily="casual"
        android:textStyle="italic"
        android:textAlignment="gravity"
        android:textFontWeight="@android:integer/config_mediumAnimTime"
        android:includeFontPadding="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:id="@+id/player1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Игрок 2"
        android:fontFamily="casual"
        android:textStyle="italic"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="260dp"
        android:textSize="20dp"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:id="@+id/player2"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:textSize="20dp"
        android:visibility="gone"
        android:id="@+id/imagePlayer1"
        tools:srcCompat="@drawable/ic_round_hourglass_empty_24"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="220dp"
        android:textSize="20dp"
        android:visibility="gone"
        android:id="@+id/imagePlayer2"
        tools:srcCompat="@drawable/ic_round_hourglass_empty_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Победа игрок1!"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:visibility="gone"
        android:textSize="40dp"
        android:textColor="@android:color/white"
        android:id="@+id/result"/>

    <ImageView
        android:id="@+id/place2_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_marginStart="270dp"
        android:layout_marginTop="445dp"

        tools:srcCompat="@drawable/ic_round_hourglass_empty_24" />

    <ImageView
        android:id="@+id/place1_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_marginStart="160dp"
        android:layout_marginTop="445dp"

        tools:srcCompat="@drawable/ic_round_hourglass_empty_24" />

    <ImageView
        android:id="@+id/place0_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_marginStart="50dp"
        android:layout_marginTop="445dp"
        tools:srcCompat="@drawable/ic_round_hourglass_empty_24" />

    <ImageView
        android:id="@+id/place2_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_marginStart="270dp"
        android:layout_marginTop="340dp"
        tools:srcCompat="@drawable/ic_round_hourglass_empty_24" />

    <ImageView
        android:id="@+id/place0_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_marginStart="50dp"
        android:layout_marginTop="340dp"
        tools:srcCompat="@drawable/ic_round_hourglass_empty_24" />

    <ImageView
        android:id="@+id/place1_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_marginStart="160dp"
        android:layout_marginTop="340dp"
        tools:srcCompat="@drawable/ic_round_hourglass_empty_24" />

    <ImageView
        android:id="@+id/place2_0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_marginStart="270dp"
        android:layout_marginTop="235dp"
        tools:srcCompat="@drawable/ic_round_hourglass_empty_24" />

    <ImageView
        android:id="@+id/place1_0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="235dp"
        tools:srcCompat="@drawable/ic_round_hourglass_empty_24" />

    <ImageView
        android:id="@+id/place0_0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="235dp"
        tools:srcCompat="@drawable/ic_round_hourglass_empty_24" />

    <ImageView
        android:id="@+id/PeoplePlayer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="300dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_arrow_back_24"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fieldtictac"
        android:id="@+id/fieldoftoe"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="550dp"
        android:src="@drawable/ic_baseline_refresh_24"
        android:id="@+id/restart_game"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/AIplayer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/ic_baseline_adb_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>